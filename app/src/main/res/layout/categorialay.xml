<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/layoutcategoria"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="@drawable/bottomsheetbackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30px"
        android:fontFamily="@font/font"
        android:text="Elije una opciÃ³n"
        android:textColor="#000000"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/agua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="51dp"
            android:src="@drawable/gota" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/font"
            android:text="Agua"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>




    <LinearLayout
        android:id="@+id/electricidad"
        android:layout_width="423dp"
        android:layout_height="75dp"
        android:padding="30px">


        <ImageView
            android:layout_width="68dp"
            android:layout_height="52dp"
            android:src="@drawable/bombillo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:fontFamily="@font/font"
            android:text="Electricidad"
            android:textColor="#000000"
            android:textSize="20sp" />

    </LinearLayout>

     <LinearLayout
        android:id="@+id/comida"
        android:layout_width="423dp"
        android:layout_height="75dp"
        android:padding="30px">


        <ImageView
            android:layout_width="68dp"
            android:layout_height="52dp"
            android:src="@drawable/alimnetos"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:fontFamily="@font/font"
            android:text="Comida"
            android:textColor="#000000"
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/casa"
        android:layout_width="423dp"
        android:layout_height="75dp"
        android:padding="30px">


        <ImageView
            android:layout_width="68dp"
            android:layout_height="52dp"
            android:src="@drawable/casa"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:fontFamily="@font/font"
            android:text="Compras para la casa"
            android:textColor="#000000"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/otras"
        android:layout_width="423dp"
        android:layout_height="75dp"
        android:padding="30px">


        <ImageView
            android:layout_width="68dp"
            android:layout_height="52dp"
            android:src="@drawable/cosas"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:fontFamily="@font/font"
            android:text="Otras"
            android:textColor="#000000"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>